        var isPOI = function () {
        #set ( $usrPoi = false )
        #if ($is_signed_in)
            #set ( $usrRoles = $user.getRoles())
            #foreach ( $usrRole in $usrRoles )
                #if ( $usrRole.getName() == "poi" )
                    #set ( $usrPoi = true )
                #end
            #end
        #end
        return $usrPoi
        }

